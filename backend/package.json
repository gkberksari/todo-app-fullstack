    "eslint": "^9.23.0",

    "eslint-config-prettier": "^10.1.1",

    "eslint-plugin-prettier": "^5.2.5",

    "jest": "^29.7.0",

    "nodemon": "^3.1.9",

    "prettier": "^3.5.3",

    "supertest": "^7.1.0",

    "ts-jest": "^29.3.0",

    "ts-node": "^10.9.2",

    "ts-node-dev": "^2.0.0",

    "tsx": "^4.19.3",

    "typescript": "^5.8.2"

  }

