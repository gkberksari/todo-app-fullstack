    "cors": "^2.8.5",

    "dotenv": "^16.4.7",

    "express": "^4.21.2",

    "jsonwebtoken": "^9.0.2",

    "prisma": "^6.5.0",

    "swagger-jsdoc": "^6.2.8",

    "swagger-ui-express": "^5.0.1"

  },

  "devDependencies": {

    "@eslint/js": "^9.23.0",

    "@types/bcrypt": "^5.0.2",

    "@types/cors": "^2.8.17",

    "@types/express": "^5.0.1",

    "@types/jest": "^29.5.14",

    "@types/jsonwebtoken": "^9.0.9",

    "@types/node": "^22.13.14",

